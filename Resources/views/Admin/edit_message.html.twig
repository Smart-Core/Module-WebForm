{% extends '@WebFormModule/Admin/_layout.html.twig' %}

{% block content %}

    <h2>{{ 'Message'|trans }} #{{ form.vars.data.id }} от {{ form.vars.data.createdAt|localizeddate('full') }}</h2>

    {{ form_start(form, {'attr': {'class': 'form-horizontal well'}} ) }}

    {% for field in web_form.fields %}
        <div class="form-group">
            <label class="control-label optional">{{ field.title }}:</label>
            <div class="controls">
                <div class="form-control">{{ form.vars.data.dataValue(field.name) }}</div>
            </div>
        </div>
    {% endfor %}

    {{ form_end(form) }}

{% endblock content %}
